<?xml version='1.0' encoding='utf-8' ?>

<!-- config.xml - TVS auto-syndicated news portal -->

<!-- parent configuration property -->
<config>

    <!-- Perl DBI ( database ) configuration -->
    <dbase driver='DBI:mysql' host='localhost' database='tvs' user='root' password='' />

    <!-- Article Interval configuration -->
    <interval name='featured' days='14' votes='2' />
    <interval name='watch_list' days='7' votes='1' />
    <interval name='inbox' days='1' votes='0' />

    <!-- Article Pruning configuration -->
    <prune days='90' votes='all' />

    <!-- RSS Subscription configuration -->
    <rss title='TVS' link='https://github.com/ispyhumanfly/tvs' language='en' description='a pretty cool news portal' rating='(PICS-1.1 "http://www.classify.org/safesurf/" 1 r (SS~~000 1))' copyright='2011 ispyhumanfly' webmaster='ispyhumanfly' />

</config>

<!-- end of xml document -->
